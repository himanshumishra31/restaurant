<%= form_for [:admin, @branch], html: { class: 'form-horizontal'} do |form| %>
  <fieldset>
    <legend class="top_bar">Enter Restaurant Details</legend>
    <%= render 'shared/errors', model: @branch %>
    <div class="form-group">
      <%= form.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :opening_time, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.time_field :opening_time, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :closing_time, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.time_field :closing_time, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
