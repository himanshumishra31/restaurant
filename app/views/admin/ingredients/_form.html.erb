<%= form_for [:admin, @ingredient], html: { class: 'form-horizontal'} do |form| %>
  <fieldset>
    <legend class="top_bar">Enter Ingredient Details</legend>
    <%= render 'shared/errors', model: @ingredient %>
    <div class="form-group">
      <%= form.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :price, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.number_field :price, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :category, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.radio_button :category, 0 %>
        <%= form.label :category_veg, 'Veg' %>
        <%= form.radio_button :category, 1 %>
        <%= form.label :category_nonveg, 'Non-Veg' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :extra_allowed, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.check_box :extra_allowed, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
