<div class="container">
  <h3> Select date range to view the popular meal of the range. </h3>
  <br />
  <br />
  <%= form_tag(admin_reports_path, method: 'get') do %>
    <%= label_tag 'From Date:' %>
    <%= select_date @from_date, prefix: :from_date %>
    <br/>
    <br/>
    <%= label_tag 'To Date:' %>
    <%= select_date @to_date, prefix: :to_date %>
    <br>
    <br>
    <%= submit_tag 'Filter', class: 'btn btn-success' %>
  <% end %>
  <h3><STRONG>Popular Meal:
      <% if @popular_meal %>
        <%= @popular_meal.name %>
      <% else %>
        No orders placed
      <% end %>
    </STRONG></h3>
  <br />
  <br />
  <h4> Low Inventory </h4>
  <% if @inventories.present? %>
    <table class="table table-hover table-striped" border='2'>
      <tr>
        <th>Name</th>
        <th>Quantity left</th>
      </tr>
      <% @inventories.each do |inventory| %>
        <tr>
          <td><%= inventory.ingredient.name %></td>
          <td><%= inventory.quantity %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</div>
