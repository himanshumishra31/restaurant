<h3>Please provide your valuable feedback</h3>
<%= form_tag rate_meals_path, method: :put do %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Rate(out of 5)</th>
        <th>Comment</th>
      </tr>
    </thead>
    <tbody>
      <% @order.cart.line_items.each do |line_item| %>
        <%= fields_for "ratings[]", Rating.new do |f| %>
          <tr>
            <td><%= line_item.meal.name %> <%= image_tag(line_item.meal.picture, size: "50x50") %></td>
            <td><%= number_to_currency(line_item.meal.price) %></td>
            <td><%= f.select(:value, (0..5).step(0.5).to_a, prompt: 'Not rated', class: 'form-control') %></td>
            <td>
              <%= f.text_area :review, cols: '5', rows: '3', class: 'form-control', placeholder: 'Add a comment' %>
            </td>
            <%= f.hidden_field :meal_id, value: line_item.meal.id %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= submit_tag 'Rate Meals', class: 'btn btn-success' %>
  <br>
<% end %>
