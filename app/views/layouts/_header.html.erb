<div class="current_user primary-banner">
  <div class="container text-center">
    <% if @current_user %>
      <p class="banner-header">Hi <%= @current_user.name %>. Welcome to Our <%= link_to "Restaurant", login_path, id: "logo" %></p>
    <% else %>
      <p class="banner-header"> Welcome to Our Restaurant</p>
    <% end %>
  </div>
</div>
<nav class="navbar navbar-inverse navbar-fixed-top navigation">
  <div class="container">
    <ul class="nav navbar-nav navbar-right">
      <li class="links"><%= link_to "Home", login_path %></li>
      <li class="links"><%= link_to "Help", login_path %></li>
      <% if @current_user %>
        <li class="links"><%= link_to "Users", login_path %></li>
        <li class="dropdown links">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-expanded="false">Account <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", edit_user_path(@current_user) %></li>
            <li><%= link_to "Settings", edit_user_path(@current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Log out", logout_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li class="links"><%= link_to "Log in", login_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
