<br><br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Update Profile</h4>
        </div>
        <div class="panel-body">
          <%= form_for user do |form| %>
            <fieldset>
            <%= render 'shared/errors', model: @user %>
              <div class="form-group">
                <%= form.text_field :name, size: 40, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="form-group">
                <%= form.password_field :password, size: 40, class: 'form-control', placeholder: 'Password' %>
              </div>
              <div class="form-group">
                <%= form.password_field :password_confirmation, size: 40, class: 'form-control', placeholder: ' Confirm Password' %>
              </div>
              <div class="form-group">
                <% if params[:action].eql? 'edit' or params[:action].eql? 'update'%>
                  <%= form.email_field :email, size: 40, class: 'form-control', disabled: true %>
                <% else %>
                  <%= form.email_field :email, size: 40, class: 'form-control', placeholder: "Email"%>
                <% end %>
              </div>
              <%= form.submit 'Submit', class: 'btn btn-lg btn-success btn-block' %>
            </fieldset>
          <% end %>
          <hr/>
          <center><h4><%= link_to 'Login', login_path %> | <%= link_to 'Forgot Password', reset_password_path %></h4></center>
        </div>
      </div>
    </div>
  </div>
</div>
