<%= form_for user do |form| %>
  <fieldset>
    <legend class="top_bar">Enter Details</legend>
    <%= render 'shared/errors', model: @user %>
    <div class="form-group">
      <%= form.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= form.text_field :name, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :password, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.password_field :password, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.password_field :password_confirmation, size: 40, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :email, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= form.email_field :email, size: 40, class: 'form-control'%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= form.submit 'Submit', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
