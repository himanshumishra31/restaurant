$('.cart').html("<%=j render(@cart) %>");
$('.cart').show();
if ($('.container-page div.alert').length < 1) {
  flashdiv = $('<div>',{ class: 'alert alert-success'})
  $('.container-page').prepend(flashdiv);
}
<% if @status %>
  $('.alert-success').text("Line Item Added");
<% else %>
  $('.alert-success').text("Sorry. Insufficient Stock. Please Try after some time");
<% end %>
