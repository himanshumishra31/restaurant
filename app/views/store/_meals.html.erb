<!-- FIX_ME_PG_3:- Move this to separate filter partial -->
<% if @meals.any? %>
  <%= form_tag store_index_path, method: :get, data: { category: :options }, remote: true do %>
    <!--FIX_ME_PG_3:-  Lets itegrate to valid categories and build radio tags except for `All Meal` -->
    <%= radio_button_tag 'category', 'veg', (session[:category].eql? 'veg') %>
    <%= label_tag 'category_veg', 'Only Veg' %>
    <%= radio_button_tag 'category', 'non_veg', (session[:category].eql? 'non_veg') %>
    <%= label_tag 'category_non_veg', 'Only Non Veg' %>
    <%= radio_button_tag 'category', 'both', (session[:category].eql? 'both') %>
    <%= label_tag 'category_both', 'All Meals' %>
  <% end %>
<% else %>
  <strong> No Available Meals</strong>
<% end %>
<br>
<br>
<% @meals.each do |available_meal| %>
  <div class="col-md-4" id="<%= available_meal.id %>" data-name ="item_div">
    <%= image_tag(available_meal.image, size: "150x150") %><br><br>
    <p><strong>Price: <%= number_to_currency(available_meal.price) %></strong></p>
    <p><%= button_to 'Add To Cart', line_items_path(meal_id: available_meal), remote: true, class: 'btn btn-primary'  %></p>
    <p><strong>Rating:
      <% if meal_rated?(available_meal) %>
        Not Yet Rated
      <% else %>
        <%= average_rating(available_meal) %>
      <% end %>
    </strong></p>
  </div>
<% end %>
