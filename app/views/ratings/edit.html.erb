<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Please Enter Review Details</h4>
        </div>
        <div class="panel-body">
          <%= form_for @rating do |form| %>
            <fieldset>
              <%= render 'shared/errors', model: @rating %>
              <div class="form-group">
                <%= form.select(:value, (0..5).step(0.5).to_a, prompt: 'Not rated', class: 'form-control') %>
              </div>
              <div class="form-group">
                <%= form.text_area :review, cols: '5', rows: '3', class: 'form-control', required: true, placeholder: 'Add a comment' %>
                <%= form.hidden_field :meal_id, value: @meal.id %>
                <%= form.hidden_field :user_id, value: @current_user.id %>
              </div>
              <%= form.submit 'Review', class: 'btn btn-lg btn-success btn-block' %>
            </fieldset>
          <% end %>
          <hr/>
          <center><h4><%= link_to 'Store', store_index_path %></h4></center>
        </div>
      </div>
    </div>
  </div>
</div>
