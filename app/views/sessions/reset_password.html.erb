<div class="container">
  <div class="top-bar center-block text-center text-uppercase">Forgot Password
  </div>
  <%= form_for @user, url: edit_user_password_url, html: { class: "form-horizontal login-form center-block" } do |form| %>
    <fieldset>
      <%= render 'shared/errors' , model: @user %>
      <%= hidden_field_tag :email, @user.email %>
      <div class="form-group">
        <%#<%= form.label :password, class: "col-lg-2 control-label" %>
        <div class="col-sm-12">
          <%= form.password_field :password, placeholder: "Enter your new password", class: 'form-control form-control-input' %>
        </div>
      </div>
      <div class="form-group">
        <%#<%= form.label :password_confirmation, class: "col-lg-2 control-label" %>
        <div class="col-sm-12">
          <%= form.password_field :password_confirmation, placeholder: "Confirm your new password", class: 'form-control form-control-input' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%= form.submit 'Update Password', class: 'btn btn-primary btn-lg btn-block text-uppercase' %>
        </div>
      </div>
      <div class="traversal-link text-center">
        <%= link_to 'New User?', new_user_path %>
      </div>
    </fieldset>
  <% end %>
</div>
