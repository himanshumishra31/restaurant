<br><br><br><br><br>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">Login</h4>
        </div>
        <div class="panel-body">
          <%= form_tag do %>
            <fieldset>
              <div class="form-group">
                <%= email_field_tag :email, params[:email], class: 'form-control', placeholder: "yourmail@example.com"%>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: 'Password' %>
              </div>
              <div class="form-group">
                <label>
                  <%= check_box_tag :remember_me, params[:remember_me] %> Remember Me
                </label>
              </div>
              <%= submit_tag 'Log In', class: 'btn btn-lg btn-success btn-block' %>
            </fieldset>
          <% end %>
          <hr/>
          <center><h4><%= link_to 'New User?', signup_path %> | <%= link_to 'Forgot Password', new_password_url %></h4></center>
        </div>
      </div>
    </div>
  </div>
</div>
