<div class="container">
  <div class="top-bar center-block text-center text-uppercase">Forgot Password
  </div>
  <%= form_for :user, url: reset_password_url, method: 'patch', html: { class: "form-horizontal login-form center-block" } do |form| %>
    <fieldset>
      <div class="form-group">
        <%#<%= form.label :email, 'Email', class: "col-lg-2 control-label" %>
        <div class="col-sm-12">
          <%= email_field_tag :email, params[:email], placeholder: "Please enter your email", class: 'form-control form-control-input' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-12">
          <%#<%= form.submit 'submit', class: 'btn btn-primary' %>
          <%= button_tag(type: 'submit', class: "btn btn-primary btn-lg btn-block text-uppercase") do %>
            Continue<i class="fa fa-chevron-right padding-5" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>
      <div class="traversal-link text-center">
        <%= link_to 'New User?', new_user_path %>
      </div>
    </fieldset>
  <% end %>
</div>
